<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:padding="16dp"
    android:layout_height="match_parent">

    <ImageView
        android:src="@drawable/icon_basic"
        android:id="@+id/iv_ranking"
        android:layout_width="70dp"
        android:layout_height="60dp" />

    <TextView
        android:id="@+id/tv_rank"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10sp"
        android:layout_marginTop="10dp"
        android:layout_toEndOf="@+id/iv_ranking"
        android:layout_toRightOf="@+id/iv_ranking"
        android:text="1ìœ„"
        android:textSize="25sp" />
    <TextView
        android:id="@+id/tv_finalRecord"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20sp"
        android:layout_marginTop="10dp"
        android:layout_toEndOf="@+id/tv_rank"
        android:layout_toRightOf="@+id/tv_rank"
        android:text="00:00:00"
        android:textSize="20sp" />

</RelativeLayout>