<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:padding="18dp"
    android:id="@+id/bg"
    android:layout_height="match_parent"
    tools:context="com.q1.clickclick.MainActivity"
    android:background="@drawable/bg"
    >


    <TextView
        android:id="@+id/tv_Top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="12 Clicks"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#8b1700"
        />

    <TextView
        android:id="@+id/tv_stage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/window_front"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="10dp"
        android:textColor="#e9258a"
        android:textStyle="bold"
        android:text="stage"
        android:gravity="center"
        android:textSize="22sp" />

    <Button
        android:visibility="invisible"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/remove"
        android:text="delete"
        android:onClick="clickDel"
        />

    <ImageView
        android:id="@+id/btn_start"
        android:layout_marginTop="20dp"
        android:layout_marginRight="18dp"
        android:layout_width="90dp"
        android:layout_height="50dp"
        android:layout_below="@+id/tv_Top"
        android:layout_alignParentRight="true"
        android:clickable="true"
        android:onClick="startClick"
        android:src="@drawable/start" />


    <LinearLayout
        android:layout_marginTop="10dp"
        android:id="@+id/window_front"
        android:visibility="visible"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn_start"
        android:layout_above="@+id/ad_view"
        android:orientation="vertical"
        android:weightSum="8"
        >

    <LinearLayout
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:layout_height="0dp"
        android:padding="10dp"
    android:layout_weight="2"
    android:weightSum="3">

        <ImageView
            android:layout_margin="4dp"
            android:id="@+id/btn_01"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:clickable="true"
            android:onClick="onClick"
            android:src="@drawable/grey" />

    <ImageView
        android:layout_margin="4dp"
        android:id="@+id/btn_02"
        android:onClick="onClick"
        android:src="@drawable/grey"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:clickable="true"/>

    <ImageView
        android:layout_margin="4dp"
        android:id="@+id/btn_03"
        android:onClick="onClick"
        android:src="@drawable/grey"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:clickable="true"/>


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="0dp"
        android:padding="10dp"
        android:layout_weight="2"
        android:weightSum="3">

        <ImageView
            android:layout_margin="4dp"
            android:id="@+id/btn_04"
            android:onClick="onClick"
            android:src="@drawable/grey"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:clickable="true"/>

        <ImageView
            android:layout_margin="4dp"
            android:id="@+id/btn_05"
            android:onClick="onClick"
            android:src="@drawable/grey"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:clickable="true"/>

        <ImageView
            android:layout_margin="4dp"
            android:id="@+id/btn_06"
            android:onClick="onClick"
            android:src="@drawable/grey"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:clickable="true"/>




    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:padding="10dp"
        android:orientation="horizontal"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:weightSum="3">

        <ImageView
            android:layout_margin="4dp"
            android:id="@+id/btn_07"
            android:onClick="onClick"
            android:src="@drawable/grey"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:clickable="true"/>

        <ImageView
            android:layout_margin="4dp"
            android:id="@+id/btn_08"
            android:onClick="onClick"
            android:src="@drawable/grey"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:clickable="true"/>

        <ImageView
            android:layout_margin="4dp"
            android:id="@+id/btn_09"
            android:onClick="onClick"
            android:src="@drawable/grey"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:clickable="true"/>




    </LinearLayout>


    <LinearLayout
        android:padding="10dp"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:weightSum="3">

        <ImageView
            android:layout_margin="4dp"
            android:id="@+id/btn_10"
            android:onClick="onClick"
            android:src="@drawable/grey"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:clickable="true"/>

        <ImageView
            android:layout_margin="4dp"
            android:id="@+id/btn_11"
            android:onClick="onClick"
            android:src="@drawable/grey"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:clickable="true"/>

        <ImageView
            android:id="@+id/btn_12"
            android:onClick="onClick"
            android:src="@drawable/grey"
            android:layout_margin="4dp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:clickable="true"/>




    </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:visibility="visible"
        android:id="@+id/window_back"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_below="@id/btn_start"
        android:layout_above="@+id/ad_view"
        android:layout_height="match_parent">

        <TextView
            android:visibility="invisible"
            android:id="@+id/tv_currentRecord"
            android:text="Game over"
            android:textSize="50sp"
            android:gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <ListView
            android:id="@+id/listView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"></ListView>


    </LinearLayout>

    <com.google.android.gms.ads.AdView
        android:id="@+id/ad_view"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        ads:adSize="BANNER"
        ads:adUnitId="@string/banner_ad_unit_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"></com.google.android.gms.ads.AdView>
</RelativeLayout>
